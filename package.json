{
  "name": "assert-json-body",
  "version": "1.3.1",
  "description": "OpenAPI response body extraction and JSON shape assertion toolkit (framework-agnostic)",
  "type": "module",
  "main": "./dist-cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist-cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base.js",
      "require": "./dist-cjs/base.js",
      "types": "./dist/base.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "require": "./dist-cjs/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "assert-json-body": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "dist-cjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist-cjs/package.json",
    "build": "npm run build:esm && npm run build:cjs",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx watch src/cli/index.ts",
    "generate": "node ./dist/cli/index.js extract",
    "config:init": "node ./dist/cli/index.js init-config",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:integration": "vitest run -c vitest.config.integration.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "npm run build",
    "release": "semantic-release",
    "prepare:husky": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camunda/assert-json-body.git"
  },
  "keywords": [
    "openapi",
    "playwright",
    "testing",
    "assertion",
    "cli"
  ],
  "author": "Josh Wulf <josh.wulf@camunda.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/camunda/assert-json-body/issues"
  },
  "homepage": "https://github.com/camunda/assert-json-body#readme",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "debug": "^4.4.3",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^13.0.2",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.4",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.44.1",
    "vitest": "^2.0.5"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      ["@semantic-release/npm", { "npmPublish": true }],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
